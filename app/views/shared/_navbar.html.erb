<div class="navbar-ember fixed-top" id="navbar">
  <ul>
    <li>
      <%= link_to journeys_path, class: "#{'active' if controller_name == 'journeys' && action_name == 'index' || action_name == 'show'}" do %>
        <i class="far fa-image" style="font-size: 20px;"></i>
      <% end %>
    </li>
    <li>
      <%= link_to journeys_path, data: { toggle: "modal", target: "#exampleModalCenter" } do %>
        <i class="fas fa-search"></i>
      <% end %>
    </li>
    <li>
      <%= link_to main_journeys_path, class: "#{'active' if controller_name == 'journeys' && action_name == 'main' || action_name == 'new'}" do %>
        <i class="fab fa-gripfire" style="font-size: 23px;"></i>
      <% end %>
    </li>
    <li>
      <%= link_to map_journeys_path, class: "#{'active' if controller_name == 'journeys' && action_name == 'map'}" do %>
        <i class="fas fa-globe-europe"></i>
      <% end %>
    </li>
    <li class="nav-item dropdown <%= 'active' if devise_controller? %>">
      <%= icon('fas', 'cog', class: "avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "Edit user", edit_user_registration_path, class: "dropdown-item" %>
        <%= link_to "Change settings", edit_settings_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
      </div>
    </li>
  </ul>
</div>

<%= render "shared/search_modal" %>
